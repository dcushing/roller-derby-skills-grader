<% if logged_in? %>
<div class="row jumbotron-color">
    <%= render partial: 'shared/user_info' if current_user %>
    <div class="center jumbotron">
        <h1>Welcome back, <%= current_user.display_name %>!</h1>
        <h2><%= link_to "Go to my profile", user_path(current_user) %></h2>
    </div>
</div>
<% else %>
<div class="center jumbotron">
    <h1>How's My Derby Now?</h1> 
    
    <h2>Welcome to How's My Derby Now?, the roller derby skills grader by Dany Stormborn! Signup and begin tracking your progress as you learn different roller derby skills. We welcome skaters, refs, and NSOs of all kinds!</h2>
    
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary my-btn" %>
</div>
<% end %>
