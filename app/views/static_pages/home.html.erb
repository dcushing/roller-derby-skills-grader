<% if logged_in? %>
<div class="row">
    <%= render partial: 'shared/user_info' if current_user %>
</div>
<% else %>
<div class="center jumbotron">
    <h1>Roller Derby Skills Grader</h1> 
    
    <h2>Welcome to the Roller Derby Skills Grader! Signup and begin tracking your progress as you learn different roller derby skills. We welcome skaters, refs, and NSOs of all kinds!</h2>
    
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary my-btn" %>
</div>
<% end %>
