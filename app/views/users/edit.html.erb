<% provide(:title, "Edit User") %>
<h1>Update your profile</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        
        <%= f.submit "Save Changes", class: 'btn btn-primary my-btn' %>
        
        <% end %>
    </div>
</div>